# Environment Variables Template for Sagar Tours & Travels
# ========================================================
# Copy this file to .env and update with your actual values

# Admin Authentication
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=your_secure_password

# JWT Secret Key
VITE_JWT_SECRET=your_jwt_secret_key_here

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Payment Gateway Keys
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id_here
VITE_RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
VITE_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_here

# Database Configuration
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=sagar_tours_db
VITE_DB_USER=postgres
VITE_DB_PASSWORD=your_db_password

# Email Service Configuration
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your_email@gmail.com
VITE_SMTP_PASSWORD=your_app_password
VITE_FROM_EMAIL=noreply@sagartours.com

# SMS Gateway Configuration
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=+1234567890

# Google Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_GOOGLE_ANALYTICS_ID=GA_TRACKING_ID

# Social Media Integration
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_API_KEY=your_twitter_api_key

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_PASSWORD_MIN_LENGTH=8
VITE_MAX_LOGIN_ATTEMPTS=5

# Application Configuration
VITE_APP_NAME=Sagar Tours & Travels
VITE_APP_VERSION=1.0.0
VITE_COMPANY_EMAIL=info@sagartours.com
VITE_COMPANY_PHONE=+91 9876543210
VITE_COMPANY_ADDRESS=123 Main Street, Mumbai, Maharashtra, India - 400001

# Development/Production Flag
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
